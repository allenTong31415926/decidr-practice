<div id="flash_messages" class="d-flex justify-content-center mb-3 w-100">
  <% flash.each do |type, message| %>
    <div class="alert alert-<%= type == 'error' ? 'danger' : 'success' %> alert-dismissible fade show" style="min-width: 300px;" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div> 